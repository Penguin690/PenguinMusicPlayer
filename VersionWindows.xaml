<Window x:Class="MusicApp.VersionWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicApp"
        mc:Ignorable="d"
        Title="Version Info" Height="200" Width="256" Background="#FF595959" ResizeMode="NoResize"
        Icon="/imgs/icon.png">
    <Grid>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Image Source="/imgs/icon.png" Height="80" Visibility="Visible"/>
        <TextBlock x:Name="Version" FontSize="15" FontFamily="Consolas" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Version: 0.0.0.0000" Foreground="#FFA6A6A6"/>
        <Button Style="{DynamicResource ButtonStyle}" Grid.Row="2" Width="75" FontFamily="Consolas" FontSize="15" Content="Close" Click="Button_Click"/>
    </Grid>
</Window>
